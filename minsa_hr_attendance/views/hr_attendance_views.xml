<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="oehealt_hr_attendance_view_form" model="ir.ui.view">
            <field name="name">hr.attendance.form</field>
            <field name="model">hr.attendance</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Employee attendances" create="0" edit="0" delete="0" duplicate="0">
                    <sheet>
                        <group>
                            <field name="employee_id" readonly="1"/>
                            <group>
                                <field name="check_in" readonly="1"/>
                                <field name="check_in_photo" widget="image" readonly="1"/>
                                <field name="check_in_latitude" readonly="1"/>
                                <field name="check_in_longitude" readonly="1"/>
                            </group>
                            <group>
                                <field name="check_out" readonly="1"/>
                                <field name="check_out_photo" widget="image" readonly="1"/>
                                <field name="check_out_latitude" readonly="1"/>
                                <field name="check_out_longitude" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="oehealt_hr_attendance_view_tree" model="ir.ui.view">
            <field name="name">hr.attendance.tree</field>
            <field name="model">hr.attendance</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Employee attendances" create="0">
                    <field name="employee_id"/>
                    <field name="check_in"/>
                    <field name="check_out"/>
                    <field name="worked_hours"/>
                    <field name="department_id"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
